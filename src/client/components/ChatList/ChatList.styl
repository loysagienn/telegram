@import '../common.styl'

.root
    position: absolute
    left: 0
    top: 0
    bottom: 0
    box-sizing: border-box
    width: 400px
    background-color: $white
    border-right: 1px solid $grayBorderColor
    overflow: auto

.chatWrapper
    padding: 1px 8px

.chat
    height: 66px
    border-radius: 8px
    cursor: pointer
    position: relative
    &:hover
        background-color: $grayBgColor

.avatar
    position: absolute
    left: 8px
    top: 8px
    width: 50px
    height: 50px
    border-radius: 25px
    background-color: $grayIconColor

.desc
    position: absolute
    left: 66px
    right: 46px
    top: 11px
    bottom: 11px

.name,
.status
    width: 100%
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
    line-height: 22px

.name
    font-size: 14px
    font-weight: 500

.status
    font-size: 14px
    color: $grayTextColor

.meta
    position: absolute
    top: 8px
    right: 8px
    background-color: $grayIconColor
    width: 30px
    height: 50px
    border-radius: 10px
