@import '../common.styl'

.root
    box-sizing: border-box
    color: #ffffff
    font-size: 14px
    text-align: center
    padding: 14px
    border-radius: 8px
    background-color: $blueColor
    cursor: pointer
    &:hover
        background-color: $blueColorHove
    &:active
        background-color: $blueColorActive
