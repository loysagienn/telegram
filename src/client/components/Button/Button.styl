@import '../common.styl'

.root
    position: relative
    box-sizing: border-box
    color: #ffffff
    font-size: 14px
    line-height: 18px
    text-align: center
    padding: 14px
    border-radius: 8px
    background-color: $blueColor
    cursor: pointer
    &:hover
        background-color: $blueColorHove
    &:active
        background-color: $blueColorActive

.loadingIcon
    position: absolute
    top: 10px
    right: 10px
    width: 26px
    height: 26px
