@import '../common.styl'


.messageWrapper
    padding: 5px 20px
    box-sizing: border-box
    width: 100%
    max-width: 800px
    display: flex
    align-items: flex-end

    &.mine
        justify-content: flex-end
        .message
            background-color: #F1FEE1

    &.foreign
        justify-content: flex-start
        .message
            background-color: $white

.avatar
    width: 30px
    height: 30px
    border-radius: 50%
    margin-right: 8px
    background-color: $grayAvatarBgColor
    background-position: center center
    background-repeat: no-repeat
    background-size: cover

.message
    box-sizing: border-box
    border-radius: 8px
    box-shadow: 0 1px 1px 1px rgba(0,0,0,0.05)
    word-wrap: break-word
    font-size: 14px

.userName
    color: $blueTextColor
    font-size: 12px
    font-weight: 500
    margin-bottom: 2px

.text
    padding: 8px
    max-width: 75%

.photo
    width: 60%
    +maxWidth(1000px)
        width: 70%
    +maxWidth(850px)
        width: 80%
    +maxWidth(700px)
        width: 60%
    +maxWidth(650px)
        width: 70%
    +maxWidth(500px)
        width: 80%
    +maxWidth(400px)
        width: 90%
    .photoImg
        display: block
        width: 100%
        border-radius: 8px 8px 8px 8px
        &.withText
            border-radius: 8px 8px 0 0
    .photoText
        padding: 8px

    &.isVertical
        width: auto
        .photoImg
            width: auto
            max-height: 500px
