@import '../common.styl'


.messageWrapper
    padding: 5px 20px
    box-sizing: border-box
    width: 100%
    max-width: 800px
    display: flex
    align-items: flex-end

    &.mine
        justify-content: flex-end
        .message
            background-color: #F1FEE1

    &.foreign
        justify-content: flex-start
        .message
            background-color: $white

.avatar
    width: 30px
    height: 30px
    border-radius: 50%
    margin-right: 8px
    background-color: $grayAvatarBgColor
    background-position: center center
    background-repeat: no-repeat
    background-size: cover

.message
    box-sizing: border-box
    border-radius: 8px
    box-shadow: 0 1px 1px 1px rgba(0,0,0,0.05)
    word-wrap: break-word
    font-size: 14px

.userName
    color: $blueTextColor
    font-size: 12px
    font-weight: 500
    margin-bottom: 3px

.text
    padding: 8px

.textMessage
    max-width: 75%
    +maxWidth(1000px)
        max-width: 70%
    +maxWidth(850px)
        max-width: 80%
    +maxWidth(700px)
        max-width: 60%
    +maxWidth(650px)
        max-width: 70%
    +maxWidth(500px)
        max-width: 80%
    +maxWidth(400px)
        max-width: 90%

    .photoImg
        margin: 0 auto
        display: block
        max-width: 100%
        border-radius: 0 0 8px 8px

.photo
    width: 60%
    +maxWidth(1000px)
        width: 70%
    +maxWidth(850px)
        width: 80%
    +maxWidth(700px)
        width: 60%
    +maxWidth(650px)
        width: 70%
    +maxWidth(500px)
        width: 80%
    +maxWidth(400px)
        width: 90%
    .photoImg
        display: block
        width: 100%
        border-radius: 8px 8px 8px 8px
        &.withText
            border-radius: 8px 8px 0 0
    .photoText
        box-sizing: border-box
        padding: 8px
        width: 100%

    &.isVertical
        width: auto
        max-width: 85%
        .photoImg
            width: auto
            max-height: 500px

.sticker
    box-sizing: border-box
    padding: 1px
    position: relative
    width: 50%
    +maxWidth(1000px)
        width: 60%
    +maxWidth(850px)
        width: 70%
    +maxWidth(700px)
        width: 50%
    +maxWidth(650px)
        width: 60%
    +maxWidth(500px)
        width: 70%
    +maxWidth(400px)
        width: 80%

    .stickerPlaceholder
        width: 100%
        margin-top: 100%

    .stickerContent
        position: absolute
        left: 0
        right: 0
        top: 0
        bottom: 0
        display: flex
        justify-content: center
        align-items: center

        .stickerImage
            width: 100%
            height: 100%

        .stickerEmoji
            font-size: 100px

