@import '../common.styl'


.messageWrapper
    padding: 5px 20px
    box-sizing: border-box
    width: 100%
    max-width: 800px
    display: flex

    &.mine
        justify-content: flex-end
        .content
            background-color: #F1FEE1

    &.foreign
        justify-content: flex-start
        .content
            background-color: $white

.content
    box-sizing: border-box
    max-width: 75%
    padding: 8px
    border-radius: 8px
    box-shadow: 0 1px 1px 1px rgba(0,0,0,0.05)
    word-wrap: break-word
    font-size: 14px

