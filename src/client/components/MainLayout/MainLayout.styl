@import '../common.styl'

.root
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0
    overflow: auto

.content
    position: relative
    height: 100%
    width: 100%
    max-width: 1500px
    margin: 0 auto
    background-color: $chatBgColor
    opacity: 0
    transition: opacity 0.4s ease-out
    &.visible
        opacity: 1
